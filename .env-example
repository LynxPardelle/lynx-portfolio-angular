# =============================================================================
# Environment Configuration for Lynx Portfolio Angular Application
# =============================================================================
# This file contains environment variables used by Docker Compose and the
# application containers. Modify these values as needed for your environment.
# =============================================================================

# Application Configuration
APP_NAME=lynx-portfolio

# Port Configuration
DEV_PORT=6161
PROD_PORT=6162
PROD_NO_SSR_PORT=6163

# User Configuration (for container security)
UID=1000
GID=1000

# Node.js Configuration
NODE_ENV=development
NODE_OPTIONS=--max-old-space-size=4096

# Angular CLI Configuration
NG_CLI_ANALYTICS=false
CI=true

# Development Configuration
CHOKIDAR_USEPOLLING=true
WATCH_OPTIONS_POLL=1000

# Build Configuration
BUILD_OPTIMIZATION=true
SOURCE_MAP=false

# Nginx Configuration (for production-no-ssr)
NGINX_HOST=localhost
NGINX_PORT=80
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Docker Configuration
COMPOSE_PROJECT_NAME=lynx-portfolio-angular
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Security Configuration
SECURE_HEADERS=true
RATE_LIMITING=true

# Logging Configuration
LOG_LEVEL=info
ACCESS_LOG=true

# Performance Configuration
GZIP_COMPRESSION=true
CACHE_STATIC_ASSETS=true
KEEP_ALIVE_TIMEOUT=65

# Development Tools
ENABLE_DEVTOOLS=true
HOT_RELOAD=true
LIVE_RELOAD=true
